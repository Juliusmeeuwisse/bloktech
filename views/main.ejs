<%- include('partials/head'); -%>
<%- include('partials/header'); -%>

<body>
    <section class="profilesection">
        <article>
            <article class="likestyle newlike hide">
            </article>
            <article class="dislikestyle newdislike hide">
            </article>
            <% if (shownUser) { %>
            <article id="hearsong" class="">
                <img id="hearsongimg" class="">
            </article>
            <article class="profileText">
                <p class="defaultName">
                    <%= shownUser.firstname %>
                </p>
                <p>
                    Favorite genre:
                    <%= shownUser.musicGenre %>
                </p>
                <p>
                    Age:
                    <%= shownUser.age %>
                </p>
            </article>
            <img class="profilecard_img" src=<%= shownUser.profilepicture %>>
            <% } else { %>
            <p>No more users to match</p>
            <img class="profilecard_img" src="images/sadface.jpeg">
            <% } %>
            <!-- <img class="profilecard_img" src="images/profile_img.png"> -->
        </article>
    </section>
    <ul id="buttons">
        <form id="dislikeform" action="/dislike" method="POST">
            <input id="dislikebutton" class="formbuttons" type="image" src="images/dislikebutton.png">
        </form>
        <form id="likeform" action="/like" method="POST">
            <input id="likebutton" class="formbuttons" type="image" src="images/likebutton.png">
        </form>
    </ul>
</body>
<footer>
    <%- include ('partials/nav'); -%>
    <script src="./scripts/index.js"></script>
</footer>

</html>